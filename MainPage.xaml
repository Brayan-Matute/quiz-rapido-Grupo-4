<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculadoraMAUI.MainPage">

    <VerticalStackLayout Padding="10">
        <Entry x:Name="Numero1Entry" Placeholder="Numero 1" Keyboard="Numeric"/>
        <Entry x:Name="Numero2Entry" Placeholder="Numero 2" Keyboard="Numeric"/>

        <Button Text="Suma" Clicked="OnSumaClicked" BackgroundColor="Orange"/>
        <Button Text="Resta" Clicked="OnRestaClicked" BackgroundColor="Orange"/>
        <Button Text="Division" Clicked="OnDivisionClicked" BackgroundColor="Orange"/>
        <Button Text="Multiplicacion" Clicked="OnMultiplicacionClicked" BackgroundColor="Orange"/>
    </VerticalStackLayout>

</ContentPage>
